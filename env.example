# ========================================
# MediaCMS 环境变量配置模板
# ========================================
# 
# 使用说明:
# 1. 复制此文件为 .env
# 2. 修改下面的值以匹配你的环境
# 3. 确保 .env 文件在 .gitignore 中（不要提交到 git）
#

# Django 配置
DJANGO_SECRET_KEY=your-super-secret-key-change-this-in-production
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# 数据库配置
DB_ENGINE=django.db.backends.postgresql
DB_NAME=mediacms
DB_USER=mediacms
DB_PASSWORD=your-database-password
DB_HOST=127.0.0.1
DB_PORT=5432

# Redis 配置
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=1

# 前端配置
FRONTEND_HOST=http://localhost:8088
PORTAL_NAME=MediaCMS

# 邮件配置
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_HOST_USER=info@example.com
EMAIL_HOST_PASSWORD=your-email-password
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=info@example.com

# 媒体文件路径
MEDIA_ROOT=/path/to/media_files
STATIC_ROOT=/path/to/static

# FFmpeg 路径（可选，如果在PATH中则无需配置）
FFMPEG_COMMAND=ffmpeg
FFPROBE_COMMAND=ffprobe

# Celery 配置
CELERY_BROKER_URL=redis://:your-redis-password@127.0.0.1:6379/1
CELERY_RESULT_BACKEND=redis://:your-redis-password@127.0.0.1:6379/1

# 安全配置
CSRF_COOKIE_SECURE=False
SESSION_COOKIE_SECURE=False

# 时区
TIME_ZONE=Asia/Shanghai

